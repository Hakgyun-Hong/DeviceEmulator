<Window x:Class="DeviceEmulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeviceEmulator"
        xmlns:vm="clr-namespace:DeviceEmulator.ViewModels"
        mc:Ignorable="d"
        Title="Device Emulator" Height="800" Width="1400"
        Background="#FF1E1E1E" Foreground="#FFDDDDDD" FontFamily="Consolas">
    
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    
    <Window.Resources>
        <!-- Converters -->
        <local:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <local:StringToVisibilityConverter x:Key="StringToVisibility"/>
        
        <!-- Dark theme colors -->
        <SolidColorBrush x:Key="PanelBackground" Color="#FF252526"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#FF3F3F46"/>
        <SolidColorBrush x:Key="ButtonBackground" Color="#FF0E639C"/>
        <SolidColorBrush x:Key="ButtonHover" Color="#FF1177BB"/>
        <SolidColorBrush x:Key="TextBoxBackground" Color="#FF1E1E1E"/>
        <SolidColorBrush x:Key="HeaderBackground" Color="#FF333333"/>
        
        <!-- TreeView Style -->
        <Style TargetType="TreeViewItem">
            <Setter Property="Foreground" Value="#FFDDDDDD"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
        
        <!-- Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource ButtonBackground}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource ButtonHover}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Small Button Style -->
        <Style x:Key="SmallButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>
        
        <!-- Danger Button Style -->
        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#FFD32F2F"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFE53935"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Success Button Style -->
        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#FF388E3C"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF43A047"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- TextBox Style -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource TextBoxBackground}"/>
            <Setter Property="Foreground" Value="#FFDDDDDD"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="FontFamily" Value="Consolas"/>
        </Style>
        
        <!-- ComboBox Style -->
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource TextBoxBackground}"/>
            <Setter Property="Foreground" Value="#FFDDDDDD"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="Padding" Value="6,4"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Left: TreeView -->
            <ColumnDefinition Width="280"/>
            <!-- Splitter -->
            <ColumnDefinition Width="4"/>
            <!-- Center: Script Editor + Settings -->
            <ColumnDefinition Width="*"/>
            <!-- Splitter -->
            <ColumnDefinition Width="4"/>
            <!-- Right: Debug Panel + Log -->
            <ColumnDefinition Width="350"/>
        </Grid.ColumnDefinitions>
        
        <!-- LEFT PANEL: Device TreeView -->
        <Border Background="{StaticResource PanelBackground}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Header -->
                <Border Background="{StaticResource HeaderBackground}" Padding="10">
                    <TextBlock Text="ðŸ“± Devices" FontSize="16" FontWeight="SemiBold"/>
                </Border>
                
                <!-- TreeView -->
                <TreeView Grid.Row="1" Background="Transparent" BorderThickness="0" Padding="8">
                    <TreeView.ItemsSource>
                        <Binding Path="Categories"/>
                    </TreeView.ItemsSource>
                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate ItemsSource="{Binding Devices}">
                            <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14"/>
                            <HierarchicalDataTemplate.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="0,4">
                                        <!-- Status indicator -->
                                        <Ellipse Width="10" Height="10" Fill="{Binding StatusColor}" Margin="0,0,8,0"/>
                                        <TextBlock Text="{Binding DisplayName}" 
                                                   MouseLeftButtonDown="OnDeviceItemClick"
                                                   Tag="{Binding}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </HierarchicalDataTemplate.ItemTemplate>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>
                
                <!-- Add Device Buttons -->
                <StackPanel Grid.Row="2" Margin="10">
                    <Button Content="âž• Add Serial Device" Style="{StaticResource ModernButton}" 
                            Click="OnAddSerialDevice" Margin="0,0,0,6"/>
                    <Button Content="âž• Add TCP Device" Style="{StaticResource ModernButton}" 
                            Click="OnAddTcpDevice" Margin="0,0,0,6"/>
                    <Button Content="ðŸ—‘ï¸ Remove Selected" Style="{StaticResource DangerButton}" 
                            Click="OnRemoveDevice" IsEnabled="{Binding HasSelectedDevice}"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Splitter -->
        <GridSplitter Grid.Column="1" Width="4" Background="{StaticResource BorderBrush}" 
                      HorizontalAlignment="Stretch" Cursor="SizeWE"/>
        
        <!-- CENTER PANEL: Script Editor + Device Settings -->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="200"/>
            </Grid.RowDefinitions>
            
            <!-- Device Settings Panel -->
            <Border Background="{StaticResource HeaderBackground}" Padding="10" 
                    Visibility="{Binding HasSelectedDevice, Converter={StaticResource BoolToVisibility}}">
                <Grid x:Name="SettingsGrid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Device Name -->
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Name:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBox Text="{Binding SelectedDevice.Config.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                 Width="200"/>
                    </StackPanel>
                    
                    <!-- Control Buttons -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <CheckBox Content="ðŸ” Debug" IsChecked="{Binding SelectedDevice.IsDebuggingEnabled}" 
                                  Foreground="#FFDDDDDD" VerticalAlignment="Center" Margin="0,0,12,0"/>
                        <Button Content="âš™ï¸ Compile" Style="{StaticResource SmallButton}" 
                                Click="OnCompileScript" Margin="0,0,6,0"/>
                        <Button Content="{Binding SelectedDevice.RunButtonText}" Style="{StaticResource SuccessButton}" 
                                Click="OnToggleRunning" Width="70"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Script Editor -->
            <Border Grid.Row="1" Background="{StaticResource PanelBackground}" 
                    BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Border Background="{StaticResource HeaderBackground}" Padding="10">
                        <TextBlock Text="ðŸ“ C# Script" FontSize="14"/>
                    </Border>
                    
                    <TextBox x:Name="ScriptEditor" Grid.Row="1"
                             Text="{Binding ScriptText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             AcceptsReturn="True" AcceptsTab="True"
                             VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                             FontSize="13" Padding="10"/>
                </Grid>
            </Border>
            
            <!-- Error Message Bar -->
            <Border Grid.Row="2" Background="#FF333333" Padding="10"
                    Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibility}}">
                <TextBlock Text="{Binding ErrorMessage}" Foreground="#FFFF6B6B" TextWrapping="Wrap"/>
            </Border>
            
            <!-- Device-Specific Settings -->
            <Border Grid.Row="3" Background="{StaticResource PanelBackground}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="15">
                        <TextBlock Text="âš™ï¸ Device Settings" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        
                        <!-- Serial Settings (show when serial device selected) -->
                        <Grid x:Name="SerialSettings" Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Row 1 -->
                            <StackPanel Margin="0,0,10,10">
                                <TextBlock Text="Port:" Margin="0,0,0,4"/>
                                <ComboBox x:Name="PortComboBox" ItemsSource="{Binding AvailablePorts}"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" Margin="0,0,10,10">
                                <TextBlock Text="Baud Rate:" Margin="0,0,0,4"/>
                                <ComboBox ItemsSource="{Binding AvailableBaudRates}" 
                                          SelectedItem="{Binding SelectedDevice.Config.BaudRate, Mode=TwoWay}"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2" Margin="0,0,0,10">
                                <TextBlock Text="Parity:" Margin="0,0,0,4"/>
                                <ComboBox ItemsSource="{Binding AvailableParities}"
                                          SelectedItem="{Binding SelectedDevice.Config.Parity, Mode=TwoWay}"/>
                            </StackPanel>
                            
                            <!-- Row 2 -->
                            <StackPanel Grid.Row="1" Margin="0,0,10,0">
                                <TextBlock Text="Data Bits:" Margin="0,0,0,4"/>
                                <ComboBox SelectedItem="{Binding SelectedDevice.Config.DataBits, Mode=TwoWay}">
                                    <ComboBoxItem Content="7"/>
                                    <ComboBoxItem Content="8"/>
                                </ComboBox>
                            </StackPanel>
                            
                            <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,10,0">
                                <TextBlock Text="Stop Bits:" Margin="0,0,0,4"/>
                                <ComboBox ItemsSource="{Binding AvailableStopBits}"
                                          SelectedItem="{Binding SelectedDevice.Config.StopBits, Mode=TwoWay}"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Row="1" Grid.Column="2">
                                <TextBlock Text="Handshake:" Margin="0,0,0,4"/>
                                <ComboBox ItemsSource="{Binding AvailableHandshakes}"
                                          SelectedItem="{Binding SelectedDevice.Config.Handshake, Mode=TwoWay}"/>
                            </StackPanel>
                        </Grid>
                        
                        <!-- TCP Settings (would be shown dynamically) -->
                        <StackPanel x:Name="TcpSettings" Orientation="Horizontal" Margin="0,0,0,10">
                            <StackPanel Margin="0,0,20,0">
                                <TextBlock Text="Port:" Margin="0,0,0,4"/>
                                <TextBox Width="100"/>
                            </StackPanel>
                            <StackPanel>
                                <TextBlock Text="IP (fixed):" Margin="0,0,0,4"/>
                                <TextBox Text="127.0.0.1" IsReadOnly="True" Width="120"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- Line Ending Options -->
                        <StackPanel Orientation="Horizontal">
                            <CheckBox x:Name="AppendCRCheck" Content="Append CR (0x0D)" Foreground="#FFDDDDDD" Margin="0,0,15,0"/>
                            <CheckBox x:Name="AppendLFCheck" Content="Append LF (0x0A)" Foreground="#FFDDDDDD"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
        
        <!-- Splitter -->
        <GridSplitter Grid.Column="3" Width="4" Background="{StaticResource BorderBrush}" 
                      HorizontalAlignment="Stretch" Cursor="SizeWE"/>
        
        <!-- RIGHT PANEL: Debug Variables + Log -->
        <Grid Grid.Column="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="4"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Debug Variables -->
            <Border Background="{StaticResource PanelBackground}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Border Background="{StaticResource HeaderBackground}" Padding="10">
                        <TextBlock Text="ðŸ” Debug Variables" FontSize="14"/>
                    </Border>
                    
                    <DataGrid Grid.Row="1" ItemsSource="{Binding Variables}"
                              AutoGenerateColumns="False" IsReadOnly="True"
                              Background="Transparent" Foreground="#FFDDDDDD"
                              BorderThickness="0" GridLinesVisibility="None"
                              HeadersVisibility="Column" RowHeaderWidth="0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name.Value}" Width="100"/>
                            <DataGridTextColumn Header="Value" Binding="{Binding Value.Value}" Width="*"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding Type.Value.Name}" Width="80"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
            
            <!-- Splitter -->
            <GridSplitter Grid.Row="1" Height="4" Background="{StaticResource BorderBrush}" 
                          HorizontalAlignment="Stretch" Cursor="SizeNS"/>
            
            <!-- Communication Log -->
            <Border Grid.Row="2" Background="{StaticResource PanelBackground}" 
                    BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Border Background="{StaticResource HeaderBackground}" Padding="10">
                        <Grid>
                            <TextBlock Text="ðŸ“‹ Communication Log" FontSize="14"/>
                            <Button Content="Clear" Style="{StaticResource SmallButton}" 
                                    HorizontalAlignment="Right" Click="OnClearLog"/>
                        </Grid>
                    </Border>
                    
                    <TextBox Grid.Row="1" 
                             Text="{Binding SelectedDeviceLog, Mode=OneWay}"
                             IsReadOnly="True" TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             FontSize="11"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>

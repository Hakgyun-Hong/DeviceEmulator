<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:AvaloniaEdit="clr-namespace:AvaloniaEdit;assembly=AvaloniaEdit"
        xmlns:vm="clr-namespace:DeviceEmulator.ViewModels"
        x:Class="DeviceEmulator.Views.MainWindow"
        Title="Device Emulator (Avalonia)" Width="1400" Height="800"
        Background="#1E1E1E">
    
    <Design.DataContext>
        <vm:MainViewModel/>
    </Design.DataContext>
    
    <Window.Styles>
        <Style Selector="TextBlock">
            <Setter Property="Foreground" Value="#DDDDDD"/>
        </Style>
        <Style Selector="Button.primary">
            <Setter Property="Background" Value="#0E639C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>
        <Style Selector="Button.primary:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#1177BB"/>
        </Style>
        <Style Selector="Button.danger">
            <Setter Property="Background" Value="#D32F2F"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>
        <Style Selector="Button.success">
            <Setter Property="Background" Value="#388E3C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>
        <Style Selector="TextBox">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="#DDDDDD"/>
            <Setter Property="BorderBrush" Value="#3F3F46"/>
            <Setter Property="Padding" Value="6,4"/>
        </Style>
        <Style Selector="ComboBox">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="#DDDDDD"/>
            <Setter Property="BorderBrush" Value="#3F3F46"/>
        </Style>
    </Window.Styles>
    
    <Grid ColumnDefinitions="280,4,*,4,350">
        
        <!-- LEFT PANEL: Device TreeView -->
        <Border Background="#252526" BorderBrush="#3F3F46" BorderThickness="0,0,1,0">
            <Grid RowDefinitions="Auto,*,Auto">
                
                <!-- Header -->
                <Border Background="#333333" Padding="10">
                    <TextBlock Text="ðŸ“± Devices" FontSize="16" FontWeight="SemiBold"/>
                </Border>
                
                <!-- Device Tree -->
                <ScrollViewer Grid.Row="1" Padding="8">
                    <TreeView ItemsSource="{Binding Categories}" Background="Transparent" BorderThickness="0">
                        <TreeView.Styles>
                            <Style Selector="TreeViewItem">
                                <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
                            </Style>
                        </TreeView.Styles>
                        <TreeView.DataTemplates>
                            <!-- Category Template -->
                            <TreeDataTemplate DataType="{x:Type vm:DeviceCategoryViewModel}" ItemsSource="{Binding Devices}">
                                <StackPanel Orientation="Horizontal" Spacing="6" Background="Transparent" Height="24">
                                    <TextBlock Text="ðŸ“" VerticalAlignment="Center" FontSize="14"/>
                                    <TextBlock Text="{Binding Name}" VerticalAlignment="Center" FontWeight="Bold" Foreground="#E0E0E0"/>
                                    <Border Background="#333333" CornerRadius="4" Padding="6,1" VerticalAlignment="Center" Margin="4,0,0,0">
                                        <TextBlock Text="{Binding Devices.Count}" Foreground="#CCCCCC" FontSize="11"/>
                                    </Border>
                                </StackPanel>
                            </TreeDataTemplate>
                            
                            <!-- Device Template -->
                            <DataTemplate DataType="{x:Type vm:DeviceTreeItemViewModel}">
                                <Border Background="Transparent" Padding="4,2" Tapped="OnDeviceItemClick" Cursor="Hand" ToolTip.Tip="{Binding DisplayName}">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <!-- Status Dot -->
                                        <Ellipse Width="8" Height="8" Fill="{Binding StatusColorBrush}" VerticalAlignment="Center"/>
                                        <TextBlock Text="ðŸ“„" FontSize="14" VerticalAlignment="Center" Foreground="#AAAAAA"/>
                                        <TextBlock Text="{Binding Config.Name}" VerticalAlignment="Center" Foreground="#DDDDDD"/>
                                        <TextBlock Text="{Binding Config.DeviceType}" FontSize="10" Foreground="#888888" VerticalAlignment="Center" Opacity="0.7"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </TreeView.DataTemplates>
                    </TreeView>
                </ScrollViewer>
                
                <!-- Add Device Buttons -->
                <StackPanel Grid.Row="2" Margin="10" Spacing="6">
                    <Button Content="âž• Add Serial Device" Classes="primary" 
                            HorizontalAlignment="Stretch" Click="OnAddSerialDevice"/>
                    <Button Content="âž• Add TCP Device" Classes="primary" 
                            HorizontalAlignment="Stretch" Click="OnAddTcpDevice"/>
                    <Button Content="ðŸ—‘ï¸ Remove Selected" Classes="danger" 
                            HorizontalAlignment="Stretch" Click="OnRemoveDevice"
                            IsEnabled="{Binding HasSelectedDevice}"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Splitter -->
        <GridSplitter Grid.Column="1" Background="#3F3F46" ResizeDirection="Columns"/>
        
        <!-- CENTER PANEL: Script Editor + Settings -->
        <Grid Grid.Column="2" RowDefinitions="Auto,*,Auto,200">
            
            <!-- Device Settings Header -->
            <Border Background="#333333" Padding="10" IsVisible="{Binding HasSelectedDevice}">
                <Grid ColumnDefinitions="Auto,*,Auto">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Name:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBox Text="{Binding SelectedDevice.Config.Name, Mode=TwoWay}" Width="200"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8">
                        <CheckBox Content="ðŸ” Debug" IsChecked="{Binding SelectedDevice.IsDebuggingEnabled}"
                                  Foreground="#DDDDDD" VerticalAlignment="Center"/>
                        <Button Content="âš™ï¸ Compile" Classes="primary" Click="OnCompileScript"/>
                        <Button Content="{Binding SelectedDevice.RunButtonText}" Classes="success" 
                                Click="OnToggleRunning" Width="70"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Script Editor -->
            <Border Grid.Row="1" Background="#252526" BorderBrush="#3F3F46" BorderThickness="0,1,0,1">
                <Grid RowDefinitions="Auto,Auto,*">
                    <!-- Script Editor Header -->
                    <Border Background="#333333" Padding="10">
                        <Grid>
                            <TextBlock Text="ðŸ“ C# Script" FontSize="14"/>
                        </Grid>
                    </Border>
                    
                    <!-- Debug Toolbar -->
                    <Border Grid.Row="1" Background="#2D2D30" Padding="8" 
                            IsVisible="{Binding SelectedDevice.IsDebuggingEnabled}">
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <!-- Debug Controls -->
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <Button Content="â–¶ï¸ Continue" Click="OnDebugContinue"
                                        IsEnabled="{Binding IsPaused}"
                                        Background="#4CAF50" Foreground="White"
                                        Padding="12,6" FontWeight="Bold"/>
                                <Button Content="â­ï¸ Step" Click="OnDebugStep"
                                        IsEnabled="{Binding IsPaused}"
                                        Background="#2196F3" Foreground="White"
                                        Padding="12,6" FontWeight="Bold"/>
                                <Button Content="â¹ï¸ Stop Debug" Click="OnDebugStop"
                                        IsEnabled="{Binding IsDebugging}"
                                        Background="#F44336" Foreground="White"
                                        Padding="12,6"/>
                            </StackPanel>
                            
                            <!-- Debug State Indicator -->
                            <Border Grid.Column="2" Background="#444444" 
                                    CornerRadius="4" Padding="12,6">
                                <TextBlock Text="{Binding DebugStateText}" 
                                           FontWeight="SemiBold" Foreground="#E0E0E0"/>
                            </Border>
                        </Grid>
                    </Border>
                    
                    <!-- Script Editor -->
                    <AvaloniaEdit:TextEditor x:Name="ScriptEditor" Grid.Row="2"
                                           FontFamily="Consolas, Menlo, monospace"
                                           FontSize="13"
                                           Foreground="#D4D4D4"
                                           ShowLineNumbers="True"
                                           HorizontalScrollBarVisibility="Auto"
                                           VerticalScrollBarVisibility="Visible"/>
                </Grid>
            </Border>
            
            <!-- Error Message Bar -->
            <Border Grid.Row="2" Background="#333333" Padding="10" IsVisible="{Binding HasError}">
                <TextBlock Text="{Binding ErrorMessage}" Foreground="#FF6B6B" TextWrapping="Wrap"/>
            </Border>
            
            <!-- Device-Specific Settings -->
            <Border Grid.Row="3" Background="#252526">
                <ScrollViewer>
                    <StackPanel Margin="15" Spacing="10">
                        <TextBlock Text="âš™ï¸ Device Settings" FontSize="14" FontWeight="SemiBold"/>
                        
                        <!-- Serial Settings -->
                        <Grid ColumnDefinitions="*,*,*" RowDefinitions="Auto,Auto" 
                              IsVisible="{Binding IsSerialDevice}">
                            <StackPanel Margin="0,0,10,10">
                                <TextBlock Text="Port:" Margin="0,0,0,4"/>
                                <ComboBox ItemsSource="{Binding AvailablePorts}" 
                                          SelectedItem="{Binding SelectedDevice.Config.PortName, Mode=TwoWay}"
                                          HorizontalAlignment="Stretch"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="0,0,10,10">
                                <TextBlock Text="Baud Rate:" Margin="0,0,0,4"/>
                                <ComboBox ItemsSource="{Binding AvailableBaudRates}"
                                          SelectedItem="{Binding SelectedDevice.Config.BaudRate, Mode=TwoWay}"
                                          HorizontalAlignment="Stretch"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2" Margin="0,0,0,10">
                                <TextBlock Text="Parity:" Margin="0,0,0,4"/>
                                <ComboBox ItemsSource="{Binding AvailableParities}"
                                          SelectedItem="{Binding SelectedDevice.Config.Parity, Mode=TwoWay}"
                                          HorizontalAlignment="Stretch"/>
                            </StackPanel>
                            <StackPanel Grid.Row="1" Margin="0,0,10,0">
                                <TextBlock Text="Data Bits:" Margin="0,0,0,4"/>
                                <ComboBox SelectedItem="{Binding SelectedDevice.Config.DataBits, Mode=TwoWay}"
                                          HorizontalAlignment="Stretch">
                                    <ComboBoxItem Content="7" Tag="7"/>
                                    <ComboBoxItem Content="8" Tag="8"/>
                                </ComboBox>
                            </StackPanel>
                            <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,10,0">
                                <TextBlock Text="Stop Bits:" Margin="0,0,0,4"/>
                                <ComboBox ItemsSource="{Binding AvailableStopBits}"
                                          SelectedItem="{Binding SelectedDevice.Config.StopBits, Mode=TwoWay}"
                                          HorizontalAlignment="Stretch"/>
                            </StackPanel>
                            <StackPanel Grid.Row="1" Grid.Column="2">
                                <TextBlock Text="Handshake:" Margin="0,0,0,4"/>
                                <ComboBox ItemsSource="{Binding AvailableHandshakes}"
                                          SelectedItem="{Binding SelectedDevice.Config.Handshake, Mode=TwoWay}"
                                          HorizontalAlignment="Stretch"/>
                            </StackPanel>
                        </Grid>
                        
                        <!-- TCP Settings -->
                        <StackPanel Orientation="Horizontal" IsVisible="{Binding IsTcpDevice}" Spacing="20">
                            <StackPanel>
                                <TextBlock Text="Port:" Margin="0,0,0,4"/>
                                <TextBox Text="{Binding SelectedDevice.Config.Port, Mode=TwoWay}" Width="100"/>
                            </StackPanel>
                            <StackPanel>
                                <TextBlock Text="IP (fixed):" Margin="0,0,0,4"/>
                                <TextBox Text="127.0.0.1" IsReadOnly="True" Width="120"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
        
        <!-- Splitter -->
        <GridSplitter Grid.Column="3" Background="#3F3F46" ResizeDirection="Columns"/>
        
        <!-- RIGHT PANEL: Debug Variables + Log -->
        <Grid Grid.Column="4" RowDefinitions="*,4,*">
            
            <!-- Debug Variables -->
            <Border Background="#252526">
                <Grid RowDefinitions="Auto,*">
                    <Border Background="#333333" Padding="10">
                        <TextBlock Text="ðŸ” Debug Variables" FontSize="14"/>
                    </Border>
                    <DataGrid Grid.Row="1" ItemsSource="{Binding Variables}"
                              AutoGenerateColumns="False" IsReadOnly="True"
                              Background="Transparent" Foreground="#DDDDDD"
                              BorderThickness="0" GridLinesVisibility="None"
                              HeadersVisibility="Column">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="100"/>
                            <DataGridTextColumn Header="Value" Binding="{Binding ValueString}" Width="*"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding TypeName}" Width="80"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
            
            <!-- Splitter -->
            <GridSplitter Grid.Row="1" Background="#3F3F46" ResizeDirection="Rows"/>
            
            <!-- Communication Log -->
            <Border Grid.Row="2" Background="#252526" BorderBrush="#3F3F46" BorderThickness="0,1,0,0">
                <Grid RowDefinitions="Auto,*">
                    <Border Background="#333333" Padding="10">
                        <Grid>
                            <TextBlock Text="ðŸ“‹ Communication Log" FontSize="14"/>
                            <Button Content="Clear" Classes="primary" 
                                    HorizontalAlignment="Right" Click="OnClearLog"
                                    Padding="8,4" FontSize="11"/>
                        </Grid>
                    </Border>
                    <TextBox Grid.Row="1" 
                             Text="{Binding SelectedDeviceLog, Mode=OneWay}"
                             IsReadOnly="True" TextWrapping="Wrap"
                             FontFamily="Consolas, Menlo, monospace"
                             FontSize="11"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
